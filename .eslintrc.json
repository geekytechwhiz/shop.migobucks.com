{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        // "airbnb",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "quotes": [
            "warn",
            "single"
        ],
        // we want to force semicolons
        "semi": [
            "warn",
            "always"
        ],
        // we use 2 spaces to indent our code
        "indent": [
            "error",
            2
        ],
        // we want to avoid extraneous spaces
        "no-multi-spaces": [
            "error"
        ],
        "react/jsx-uses-react": "off",
        "react/react-in-jsx-scope": "off",
        "react/prop-types":"off"
    }
}